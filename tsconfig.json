{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "lib",
    "typeRoots": ["../node_modules/@types", "./types"],

    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  }
}
